<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutOfColor"
    android:orientation="vertical"
    android:background="@drawable/background_mis"
    app:behavior_peekHeight = "0dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="@font/medium"
        android:padding="@dimen/_10sdp"
        android:paddingStart="@dimen/_12sdp"
        android:text="@string/colours"
        android:textColor="@color/text"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_32ssp"
        android:layout_marginEnd="@dimen/_32ssp"
        android:background="@color/text"
        app:layout_constraintTop_toBottomOf="@+id/text"/>


    <HorizontalScrollView
        android:scrollbarSize="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_18sdp"
        android:paddingBottom="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/color1"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:backgroundTint="@color/noteColor1"
                android:background="@drawable/background_note_color1"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:backgroundTint="@color/noteColor2"
                android:background="@drawable/background_note_color1"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color3"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor3"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color4"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor4"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color5"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor5"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color6"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor6"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color7"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor7"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color8"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor8"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color9"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor9"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color10"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor10"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color11"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor11"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color12"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor12"
                android:padding="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/color13"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/background_note_color1"
                android:backgroundTint="@color/noteColor13"
                android:padding="@dimen/_8sdp" />


        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>