<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_40sdp"
    android:background="@color/noteColor3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="@dimen/_5sdp">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/own_book"
        android:fontFamily="@font/regular"
        android:textColor="@color/colorPri"
        android:textSize="@dimen/_18sdp"
        android:padding="@dimen/_6sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:gravity="left"/>

    <View
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_5sdp"/>

    <FrameLayout
        android:id="@+id/headerNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/notesMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/icon_notes"
                app:tint="@color/colorPri" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/medium"
                android:textColor="@color/colorPri"
                android:text="Notes"
                android:layout_marginStart="@dimen/_10sdp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="gone"
            android:src="@drawable/front_of_selected_item_in_navigation"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/headerAddNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/logOutAddNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/icon_add"
                app:tint="@color/colorPri" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/medium"
                android:textColor="@color/colorPri"
                android:text="@string/create_note"
                android:layout_marginStart="@dimen/_10sdp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageAddNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="gone"
            android:src="@drawable/front_of_selected_item_in_navigation"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/headerUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/icon_user_profile"
                app:tint="@color/colorPri" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/medium"
                android:textColor="@color/colorPri"
                android:text="@string/your_profile"
                android:layout_marginStart="@dimen/_10sdp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageUserProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="gone"
            android:src="@drawable/front_of_selected_item_in_navigation"/>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/headerArchive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/archiveMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/icon_archive"
                app:tint="@color/colorPri" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/medium"
                android:textColor="@color/colorPri"
                android:text="Archive"
                android:layout_marginStart="@dimen/_10sdp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageArchive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="gone"
            android:src="@drawable/front_of_selected_item_in_navigation"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/headerSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/settingMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/icon_setting"
                app:tint="@color/colorPri" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/medium"
                android:textColor="@color/colorPri"
                android:text="Settiong"
                android:layout_marginStart="@dimen/_10sdp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="gone"
            android:src="@drawable/front_of_selected_item_in_navigation"/>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/headerLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/logOutMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/icon_logout"
                app:tint="@color/colorPri" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/medium"
                android:textColor="@color/colorPri"
                android:text="LogOut"
                android:layout_marginStart="@dimen/_10sdp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageLogout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="gone"
            android:src="@drawable/front_of_selected_item_in_navigation"/>

    </FrameLayout>

</LinearLayout>