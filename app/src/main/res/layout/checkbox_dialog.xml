<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutAddTag"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_notes"
    android:backgroundTint="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/icon_url"
                app:tint="@color/Icones" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_checkbox_name"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/bold"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="@dimen/_1sdp"-->
        <!--            android:layout_marginTop="@dimen/_5sdp"-->
        <!--            android:layout_marginStart="@dimen/_5sdp"-->
        <!--            android:layout_marginEnd="@dimen/_5sdp"-->
        <!--            android:background="@color/colorWhite"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/checkboxTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:fontFamily="@font/regular"
                android:hint="@string/enter_tag_for_checkbox"
                android:textColor="@color/texthint"
                android:textColorHint="@color/texthint"
                android:textSize="@dimen/_12ssp"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_margin="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelButton"
                android:text="@string/cancal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/regular"
                android:padding="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/regular"
                android:padding="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>